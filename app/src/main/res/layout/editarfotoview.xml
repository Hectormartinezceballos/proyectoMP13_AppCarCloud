<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_margin="10dp"
    android:background="@color/cardview_dark_background"
    android:layout_height="wrap_content"
    tools:context=".Editar_fotos">




    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp">
        <ProgressBar
            android:id="@+id/progressBar"
            style="@android:style/Widget.DeviceDefault.ProgressBar"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:visibility="visible"
            android:layout_gravity="center"/>

        <ImageView
            android:id="@+id/imageViewFoto"
            android:layout_width="380dp"
            android:layout_height="200dp"
            tools:srcCompat="@tools:sample/avatars"
            android:layout_gravity="center"
            android:background="@color/cardview_dark_background"
            android:visibility="gone"/>

        <EditText
            android:id="@+id/EditText_nombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="TextView" />

        <EditText
            android:id="@+id/EditText_descripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="TextView" />
        <EditText
            android:id="@+id/EditText_carpeta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="TextView" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp">
        <Button
            android:id="@+id/btn_editarfoto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Editphoto_btn"/>
        <Button
            android:id="@+id/btn_borrarfoto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/DeletePhoto_btn"/>


    </LinearLayout>



</LinearLayout>